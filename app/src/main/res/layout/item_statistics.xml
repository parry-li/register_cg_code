<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/module_white"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_15">

        <ImageView
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:src="@mipmap/insurance_icn" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_8"
            android:orientation="vertical">

            <TextView
                android:id="@+id/insurance_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="盗抢险"
                android:textColor="@color/module_text_3"
                android:textSize="@dimen/sp_13" />

            <LinearLayout
                android:layout_marginTop="@dimen/dp_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/insurance_unm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="总数量：56"
                    android:textColor="@color/module_text_6"
                    android:textSize="@dimen/sp_12" />

                <View
                    style="@style/module_liner_vertical"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_10" />

                <TextView
                    android:id="@+id/insurance_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="总金额：56"
                    android:textColor="@color/module_text_6"
                    android:textSize="@dimen/sp_12" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <View
        style="@style/module_liner_horizontal"
        android:layout_marginTop="@dimen/dp_10" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/statistics_item_rv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/black_car_plate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="25dp"
        android:gravity="center"
        android:text="123456"
        android:textColor="@color/module_black"
        android:textSize="14sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="@dimen/dp_10"
        android:background="#6E6E6E" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/dp_4"
        android:background="#ADADAD" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_10"
        android:text="该车与布控车辆车架号相同，请仔细核对"
        android:textColor="@color/module_red"
        android:textSize="12sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:padding="5dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="车主"
            android:textColor="@color/module_text_9" />

        <TextView
            android:id="@+id/car_m_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="玩"
            android:textColor="@color/module_text_3" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:padding="5dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="颜色"
            android:textColor="@color/module_text_9" />

        <TextView
            android:id="@+id/car_m_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="玩"
            android:textColor="@color/module_text_3" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:padding="5dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="车辆品牌"
            android:textColor="@color/module_text_9" />

        <TextView
            android:id="@+id/car_m_pp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="玩"
            android:textColor="@color/module_text_3" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:padding="5dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="车架号"
            android:textColor="@color/module_text_9" />

        <TextView
            android:id="@+id/car_m_cj"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="玩"
            android:textColor="@color/module_text_3" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:padding="5dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="电机号"
            android:textColor="@color/module_text_9" />

        <TextView
            android:id="@+id/car_m_dj"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="玩"
            android:textColor="@color/module_text_3" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:padding="5dp"
        android:text="车辆照片"
        android:textColor="@color/module_text_9" />

    <android.support.v7.widget.RecyclerView
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:id="@+id/car_m_rv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


</LinearLayout>
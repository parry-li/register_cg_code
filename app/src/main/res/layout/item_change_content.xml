<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <TextView
            android:id="@+id/change_photo_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_100"
            android:paddingTop="@dimen/dp_16"
            android:paddingBottom="@dimen/dp_14"
            android:text="车牌号"
            android:textColor="@color/module_text_3"
            android:textSize="@dimen/sp_14" />

        <LinearLayout
            android:id="@+id/change_photo_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/change_photo_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_weight="1"
                android:gravity="end"
                android:hint="请扫码"
                android:visibility="gone" />

            <EditText
                android:id="@+id/change_photo_et"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_25"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="end"
                android:hint="请扫码"
                android:visibility="visible" />


            <ImageView
                android:id="@+id/change_photo_iv"
                android:layout_width="@dimen/dp_15"
                android:layout_height="@dimen/dp_15"
                android:visibility="gone"
                android:src="@mipmap/scan" />


        </LinearLayout>


    </LinearLayout>


    <View
        style="@style/module_liner_horizontal"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20" />

</LinearLayout>
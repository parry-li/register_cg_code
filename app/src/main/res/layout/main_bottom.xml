<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_bottom"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:layout_marginTop="1dp"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/module_white"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/main_bottom_home"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/main_bottom_home_iv"
                android:layout_width="@dimen/dp_25"
                android:layout_height="21dp"
                android:src="@mipmap/home_main_select" />


            <TextView
                android:id="@+id/main_bottom_home_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_2"
                android:gravity="center"
                android:text="业务"
                android:textColor="@color/module_button_unselect"
                android:textSize="@dimen/sp_12" />


        </LinearLayout>


        <LinearLayout
            android:id="@+id/main_bottom_me"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/main_bottom_me_iv"
                android:layout_width="@dimen/dp_25"
                android:layout_height="21dp"
                android:src="@mipmap/home_me_unselect" />

            <TextView
                android:id="@+id/main_bottom_me_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_2"
                android:gravity="center"
                android:text="我的"
                android:textColor="@color/module_button_unselect"
                android:textSize="@dimen/sp_12" />


        </LinearLayout>


    </LinearLayout>


</LinearLayout>
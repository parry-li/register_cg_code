<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:background="@color/module_main"
            android:gravity="center">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_30"

                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="王sir"
                    android:textColor="@color/module_white"
                    android:textSize="@dimen/sp_27" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_5"
                    android:text="城市"
                    android:textColor="@color/module_white" />
            </LinearLayout>


            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_30"
                android:src="@mipmap/me_head" />


        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_120"
            android:layout_marginRight="@dimen/dp_15"
            android:background="@drawable/edittext_border_white_bg"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/me_pwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_20"
                android:gravity="center|left"
                android:paddingLeft="@dimen/dp_20"
                android:paddingTop="@dimen/dp_15"
                android:paddingRight="@dimen/dp_20"
                android:paddingBottom="@dimen/dp_15">

                <ImageView
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:src="@mipmap/me_pwd" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_weight="1"
                    android:text="修改密码"
                    android:textColor="@color/module_text_3"
                    android:textSize="@dimen/sp_16" />

                <ImageView
                    style="@style/right_allow"
                    android:paddingLeft="33dp"
                    android:paddingTop="0dp"
                    android:paddingRight="0dp"
                    android:paddingBottom="0dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/me_update"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|left"
                android:paddingLeft="@dimen/dp_20"
                android:paddingTop="@dimen/dp_15"
                android:paddingRight="@dimen/dp_20"
                android:paddingBottom="@dimen/dp_15">

                <ImageView
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:src="@mipmap/me_update" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_weight="1"
                    android:text="固件升级"
                    android:textColor="@color/module_text_3"
                    android:textSize="@dimen/sp_16" />

                <ImageView
                    style="@style/right_allow"
                    android:paddingLeft="33dp"
                    android:paddingTop="0dp"
                    android:paddingRight="0dp"
                    android:paddingBottom="0dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/me_version"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|left"
                android:paddingLeft="@dimen/dp_20"
                android:paddingTop="@dimen/dp_15"
                android:paddingRight="@dimen/dp_20"
                android:paddingBottom="@dimen/dp_15">

                <ImageView
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:src="@mipmap/me_version" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_weight="1"
                    android:text="当前版本"
                    android:textColor="@color/module_text_3"
                    android:textSize="@dimen/sp_16" />

                <TextView
                    android:id="@+id/me_version_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1.0"
                    android:textColor="@color/module_text_9"
                    android:textSize="@dimen/sp_15" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/me_problem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|left"
                android:paddingLeft="@dimen/dp_20"
                android:paddingTop="@dimen/dp_15"
                android:paddingRight="@dimen/dp_20"
                android:paddingBottom="@dimen/dp_15">

                <ImageView
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/me_pro" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_weight="1"
                    android:text="问题反馈"
                    android:textColor="@color/module_text_3"
                    android:textSize="@dimen/sp_16" />

                <ImageView
                    style="@style/right_allow"
                    android:paddingLeft="33dp"
                    android:paddingTop="0dp"
                    android:paddingRight="0dp"
                    android:paddingBottom="0dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/me_insurance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|left"
                android:paddingLeft="@dimen/dp_20"
                android:paddingTop="@dimen/dp_15"
                android:paddingRight="@dimen/dp_20"
                android:paddingBottom="@dimen/dp_15">

                <ImageView
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/me_insurance" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_weight="1"
                    android:text="待投保"
                    android:textColor="@color/module_text_3"
                    android:textSize="@dimen/sp_16" />

                <ImageView
                    style="@style/right_allow"
                    android:paddingLeft="33dp"
                    android:paddingTop="0dp"
                    android:paddingRight="0dp"
                    android:paddingBottom="0dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/me_out"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_25"
                android:gravity="center|left"
                android:paddingLeft="@dimen/dp_20"
                android:paddingTop="@dimen/dp_15"
                android:paddingRight="@dimen/dp_20"
                android:paddingBottom="@dimen/dp_15">

                <ImageView
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/me_setting" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_weight="1"
                    android:text="退出登录"
                    android:textColor="@color/module_text_3"
                    android:textSize="@dimen/sp_16" />

                <ImageView
                    style="@style/right_allow"
                    android:paddingLeft="33dp"
                    android:paddingTop="0dp"
                    android:paddingRight="0dp"
                    android:paddingBottom="0dp" />
            </LinearLayout>


        </LinearLayout>
    </RelativeLayout>

</android.support.v4.widget.NestedScrollView>
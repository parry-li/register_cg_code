<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/common_title" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/module_white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout style="@style/ll_layout">

                <TextView style="@style/tv_x" />

                <TextView

                    style="@style/tv_key"
                    android:text="车辆品牌" />

                <TextView
                    android:id="@+id/wait_brand"
                    style="@style/tv_value"
                    android:paddingRight="0dp"
                    />

                <ImageView
                    android:id="@+id/wait_brand_arrow"
                    style="@style/right_allow" />


            </LinearLayout>

            <View style="@style/module_liner_horizontal_20" />

            <LinearLayout style="@style/ll_layout">

                <TextView style="@style/tv_x" />

                <TextView

                    style="@style/tv_key"
                    android:text="车牌号" />

                <EditText
                    android:id="@+id/wait_plate"
                    style="@style/tv_value" />


            </LinearLayout>

            <View style="@style/module_liner_horizontal_20" />

            <LinearLayout style="@style/ll_layout">

                <TextView style="@style/tv_x" />

                <TextView

                    style="@style/tv_key"
                    android:text="车架号" />

                <EditText
                    android:id="@+id/wait_shelves"
                    style="@style/tv_value"
                    android:hint="请输入"
                 />


            </LinearLayout>

            <View style="@style/module_liner_horizontal_20" />

            <LinearLayout style="@style/ll_layout">

                <TextView style="@style/tv_x" />

                <TextView

                    style="@style/tv_key"
                    android:text="电机号" />

                <EditText
                    android:id="@+id/wait_engine"
                    style="@style/tv_value"
                   />


            </LinearLayout>

            <View style="@style/module_liner_horizontal_20" />

            <LinearLayout style="@style/ll_layout">

                <TextView style="@style/tv_x" />

                <TextView

                    style="@style/tv_key"
                    android:text="车辆主颜色" />

                <TextView
                    android:id="@+id/wait_color1"
                    style="@style/tv_value"
                    android:paddingRight="0dp"
                   />

                <ImageView
                    android:id="@+id/wait_color1_arrow"
                    style="@style/right_allow" />


            </LinearLayout>

            <View style="@style/module_liner_horizontal_20" />

            <LinearLayout style="@style/ll_layout">

                <TextView
                    style="@style/tv_x"
                    android:visibility="invisible" />

                <TextView

                    style="@style/tv_key"
                    android:text="车辆副颜色" />

                <TextView
                    android:id="@+id/wait_color2"
                    style="@style/tv_value"
                    android:paddingRight="0dp"
                    />

                <ImageView
                    android:id="@+id/wait_color2_arrow"
                    style="@style/right_allow" />


            </LinearLayout>

            <View
                style="@style/module_liner_horizontal"
                android:layout_height="@dimen/dp_10" />

            <LinearLayout style="@style/ll_layout">

                <TextView style="@style/tv_x" />

                <TextView

                    style="@style/tv_key"
                    android:text="姓名" />

                <EditText
                    android:id="@+id/wait_owername"
                    style="@style/tv_value"
                   />


            </LinearLayout>

            <View style="@style/module_liner_horizontal_20" />

            <LinearLayout style="@style/ll_layout">

                <TextView style="@style/tv_x" />

                <TextView

                    style="@style/tv_key"
                    android:text="证件类型" />

                <TextView
                    android:id="@+id/wait_cardType"
                    style="@style/tv_value"
                    android:paddingRight="0dp"
                    />

                <ImageView
                    android:id="@+id/wait_cardType_arrow"
                    style="@style/right_allow" />

            </LinearLayout>

            <View style="@style/module_liner_horizontal_20" />

            <LinearLayout style="@style/ll_layout">

                <TextView style="@style/tv_x" />

                <TextView

                    style="@style/tv_key"
                    android:text="证件号码" />

                <EditText
                    android:id="@+id/wait_cardnum"
                    style="@style/tv_value"
                     />


            </LinearLayout>

            <View style="@style/module_liner_horizontal_20" />

            <LinearLayout style="@style/ll_layout">

                <TextView style="@style/tv_x" />

                <TextView

                    style="@style/tv_key"
                    android:text="联系手机" />

                <EditText
                    android:id="@+id/wait_phone"
                    style="@style/tv_value"
                    />


            </LinearLayout>

            <View style="@style/module_liner_horizontal_20" />

            <LinearLayout style="@style/ll_layout">

                <TextView style="@style/tv_x" />

                <TextView

                    style="@style/tv_key"
                    android:text="现住址" />

                <EditText
                    android:id="@+id/wait_adr"
                    style="@style/tv_value"
                    />


            </LinearLayout>

            <View style="@style/module_liner_horizontal_20" />

            <TextView
                android:id="@+id/button_next"
                style="@style/button_select"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_20"
                android:layout_marginBottom="@dimen/dp_40"
                android:text="确认" />
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>


</LinearLayout>
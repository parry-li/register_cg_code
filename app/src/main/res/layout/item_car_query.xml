<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dp_20"
    android:background="@drawable/edittext_border_white_bg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_18"
        android:layout_marginRight="@dimen/dp_18"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp_15"
            android:text="车辆信息"
            android:textColor="@color/module_text_3"
            android:textSize="19dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="@dimen/dp_10"
            android:background="#6E6E6E" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/dp_4"
            android:background="#ADADAD" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_16">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="车牌号"
                android:textColor="@color/module_text_9" />

            <TextView
                android:id="@+id/car_plate_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="136"
                android:textColor="@color/module_text_3" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_16">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="证件号码"
                android:textColor="@color/module_text_9" />

            <TextView
                android:id="@+id/car_card_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="136"
                android:textColor="@color/module_text_3" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_16">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="车主"
                android:textColor="@color/module_text_9" />

            <TextView
                android:id="@+id/car_ower_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="136"
                android:textColor="@color/module_text_3" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_16">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="车辆品牌"
                android:textColor="@color/module_text_9" />

            <TextView
                android:id="@+id/car_brand_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="136"
                android:textColor="@color/module_text_3" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/dp_16"
            android:background="#ADADAD" />

        <TextView
            android:id="@+id/button_confirm"
            style="@style/button_select"
            android:layout_marginLeft="@dimen/dp_60"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_60"
            android:layout_marginBottom="@dimen/dp_20"
            android:text="下一步" />

    </LinearLayout>

    <ImageView
        android:id="@+id/button_cancel"
        android:layout_width="@dimen/dp_60"
        android:layout_height="@dimen/dp_50"
        android:layout_alignParentRight="true"
        android:paddingLeft="@dimen/dp_30"
        android:paddingBottom="@dimen/dp_20"
        android:src="@mipmap/car_query" />
</RelativeLayout>
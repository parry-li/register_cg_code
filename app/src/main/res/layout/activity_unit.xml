<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/module_background"
    android:orientation="vertical">

    <include layout="@layout/common_title" />

    <com.tdr.registrationV3.view.SearchView
        android:id="@+id/search_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/all_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@color/module_clolor_e8"
            android:paddingLeft="@dimen/dp_20"
            android:paddingTop="@dimen/dp_10"
            android:paddingBottom="@dimen/dp_10"
            android:text="全部"
            android:textColor="@color/module_text_3"
            android:textSize="@dimen/sp_15" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/unit_rv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/all_tv"
            android:layout_marginTop="@dimen/dp_5" />

        <include layout="@layout/common_empty" />

    </RelativeLayout>


</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/module_main">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/module_main"
            android:gravity="center">

            <RelativeLayout
                android:id="@+id/com_title_back"
                android:layout_width="60dp"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="9dp"
                    android:layout_height="@dimen/dp_16"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:src="@mipmap/return_white" />
            </RelativeLayout>

            <TextView
                android:id="@+id/text_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="个人统计"
                android:textColor="@color/module_white"
                android:textSize="@dimen/sp_17" />


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="@color/module_main" />
        </RelativeLayout>
    </RelativeLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_110"
                android:background="@color/module_main"
                android:paddingLeft="@dimen/dp_15"
                android:paddingTop="@dimen/dp_10"
                android:paddingRight="@dimen/dp_15">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edittext_border_white_circle"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/start_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:paddingLeft="@dimen/dp_15"
                        android:paddingTop="@dimen/dp_6"
                        android:paddingRight="@dimen/dp_5"
                        android:paddingBottom="@dimen/dp_6"
                        android:text="2019-02-02"
                        android:textSize="@dimen/sp_12" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingRight="@dimen/dp_15"
                        android:src="@mipmap/black_down_arrow" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_25"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_marginRight="@dimen/dp_5"
                    android:gravity="center"
                    android:text="~"
                    android:textColor="@color/module_white" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edittext_border_white_circle"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/end_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:paddingLeft="@dimen/dp_15"
                        android:paddingTop="@dimen/dp_6"
                        android:paddingRight="@dimen/dp_5"
                        android:paddingBottom="@dimen/dp_6"
                        android:text="2019-02-02"
                        android:textSize="@dimen/sp_12" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingRight="@dimen/dp_15"
                        android:src="@mipmap/black_down_arrow" />
                </LinearLayout>

                <View
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/query"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edittext_border_white_circle"
                    android:gravity="center"
                    android:paddingLeft="@dimen/dp_15"
                    android:paddingTop="@dimen/dp_6"
                    android:paddingRight="@dimen/dp_15"
                    android:paddingBottom="@dimen/dp_6"
                    android:text="查询"
                    android:textSize="@dimen/sp_12" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/base_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_60"
                android:background="@drawable/edittext_border_white_bg"
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15"
                android:paddingLeft="@dimen/dp_20"
                android:paddingRight="@dimen/dp_20">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/dp_20"
                    android:paddingBottom="@dimen/dp_15"
                    android:text="基本信息"
                    android:textColor="@color/module_text_3"
                    android:textSize="@dimen/sp_14" />

                <View style="@style/module_liner_horizontal" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="9dp"
                        android:layout_height="9dp"
                        android:layout_marginRight="@dimen/dp_5"
                        android:src="@mipmap/statistics_circle_1" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="登记点名称"
                        android:textColor="@color/module_text_3"
                        android:textSize="@dimen/sp_13" />

                    <TextView
                        android:id="@+id/base_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:textColor="@color/module_text_3"
                        android:textSize="@dimen/sp_13" />
                </LinearLayout>
                <View style="@style/module_liner_horizontal" />



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="9dp"
                        android:layout_height="9dp"
                        android:layout_marginRight="@dimen/dp_5"
                        android:src="@mipmap/statistics_circle_2" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="登记点编号"
                        android:textColor="@color/module_text_3"
                        android:textSize="@dimen/sp_13" />

                    <TextView
                        android:id="@+id/base_no"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:textColor="@color/module_text_3"
                        android:textSize="@dimen/sp_13" />
                </LinearLayout>
                <View style="@style/module_liner_horizontal" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="9dp"
                        android:layout_height="9dp"
                        android:layout_marginRight="@dimen/dp_5"
                        android:src="@mipmap/statistics_circle_3" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="所属辖区"
                        android:textColor="@color/module_text_3"
                        android:textSize="@dimen/sp_13" />

                    <TextView
                        android:id="@+id/base_unit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:textColor="@color/module_text_3"
                        android:textSize="@dimen/sp_13" />
                </LinearLayout>
                <View style="@style/module_liner_horizontal" />



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="9dp"
                        android:layout_height="9dp"
                        android:layout_marginRight="@dimen/dp_5"
                        android:src="@mipmap/statistics_circle_4" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="登记车辆总数"
                        android:textColor="@color/module_text_3"
                        android:textSize="@dimen/sp_13" />

                    <TextView
                        android:id="@+id/base_car_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:textColor="@color/module_text_3"
                        android:textSize="@dimen/sp_13" />
                </LinearLayout>
                <View style="@style/module_liner_horizontal" />



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="9dp"
                        android:layout_height="9dp"
                        android:layout_marginRight="@dimen/dp_5"
                        android:src="@mipmap/statistics_circle_5" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="防盗登记数"
                        android:textColor="@color/module_text_3"
                        android:textSize="@dimen/sp_13" />

                    <TextView
                        android:id="@+id/stolen_unm"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:textColor="@color/module_text_3"
                        android:textSize="@dimen/sp_13" />
                </LinearLayout>
                <View style="@style/module_liner_horizontal" />



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="9dp"
                        android:layout_height="9dp"
                        android:layout_marginRight="@dimen/dp_5"
                        android:src="@mipmap/statistics_circle_6" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="无防盗登记数"
                        android:textColor="@color/module_text_3"
                        android:textSize="@dimen/sp_13" />

                    <TextView
                        android:id="@+id/no_stolen_unm"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:textColor="@color/module_text_3"
                        android:textSize="@dimen/sp_13" />
                </LinearLayout>
                <View style="@style/module_liner_horizontal" />



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="9dp"
                        android:layout_height="9dp"
                        android:layout_marginRight="@dimen/dp_5"
                        android:src="@mipmap/statistics_circle_7" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="车牌变更"
                        android:textColor="@color/module_text_3"
                        android:textSize="@dimen/sp_13" />

                    <TextView
                        android:id="@+id/plate_change"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:textColor="@color/module_text_3"
                        android:textSize="@dimen/sp_13" />
                </LinearLayout>
                <View style="@style/module_liner_horizontal" />



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="9dp"
                        android:layout_height="9dp"
                        android:layout_marginRight="@dimen/dp_5"
                        android:src="@mipmap/statistics_circle_7" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="已上赔付服务"
                        android:textColor="@color/module_text_3"
                        android:textSize="@dimen/sp_13" />

                    <TextView
                        android:id="@+id/pf_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:textColor="@color/module_text_3"
                        android:textSize="@dimen/sp_13" />
                </LinearLayout>
                <View style="@style/module_liner_horizontal" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="9dp"
                        android:layout_height="9dp"
                        android:layout_marginRight="@dimen/dp_5"
                        android:src="@mipmap/statistics_circle_7" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="登记总额"
                        android:textColor="@color/module_text_3"
                        android:textSize="@dimen/sp_13" />

                    <TextView
                        android:id="@+id/all_money"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:textColor="@color/module_text_3"
                        android:textSize="@dimen/sp_13" />
                </LinearLayout>




            </LinearLayout>



            <LinearLayout
                android:layout_below="@id/base_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_15"
                android:background="@drawable/edittext_border_white_bg"
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_marginBottom="@dimen/dp_30"
                android:paddingLeft="@dimen/dp_20"
                android:paddingRight="@dimen/dp_20">

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/dp_20"
                    android:paddingBottom="@dimen/dp_15"
                    android:text="费用信息"
                    android:textColor="@color/module_text_3"
                    android:textSize="@dimen/sp_14" />

                <View style="@style/module_liner_horizontal" />


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/statistics_rv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>


                    <include layout="@layout/common_empty"/>
                </RelativeLayout>

            </LinearLayout>

        </RelativeLayout>
    </android.support.v4.widget.NestedScrollView>

</LinearLayout>
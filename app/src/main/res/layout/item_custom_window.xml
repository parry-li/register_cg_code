<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dp_20"
    android:background="@drawable/edittext_border_white_bg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_15"
            android:orientation="vertical"
            android:paddingLeft="@dimen/dp_15"
            android:paddingRight="@dimen/dp_15">


            <TextView
                android:id="@+id/dialog_me_phone_detail_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_20"
                android:gravity="center"
                android:text="温馨提示"
                android:textColor="@color/module_text_3"
                android:textSize="@dimen/sp_17" />

            <View
                style="@style/module_liner_horizontal"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_10" />

            <TextView
                android:id="@+id/dialog_me_phone_detail_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:gravity="center"
                android:hint="提示内容"
                android:minHeight="@dimen/dp_100"
                android:paddingTop="@dimen/dp_10"
                android:paddingBottom="@dimen/dp_10"
                android:textSize="@dimen/sp_16" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_border_logo_bottom_bg">


            <TextView
                android:id="@+id/dialog_me_phone_detail_cancel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/yl_comon_dialog_cancel"
                android:gravity="center"
                android:padding="@dimen/dp_12"
                android:text="取消"
                android:textColor="@color/module_white"
                android:textSize="@dimen/sp_13" />

            <View
                android:id="@+id/dialog_me_phone_detail_view"
                android:layout_width="@dimen/sp_2"
                android:layout_height="match_parent"
                android:background="@color/module_white" />

            <TextView
                android:id="@+id/dialog_me_phone_detail_affirm"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="@dimen/dp_12"
                android:text="确定"
                android:textColor="@color/module_white"
                android:textSize="@dimen/sp_13" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
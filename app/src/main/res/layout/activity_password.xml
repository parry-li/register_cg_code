<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/module_white"
    android:orientation="vertical">

    <include layout="@layout/common_title" />


    <EditText
        android:id="@+id/password_old"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_28"
        android:layout_marginRight="@dimen/dp_28"
        android:layout_marginBottom="@dimen/dp_10"
        android:background="@null"
        android:hint="请输入原密码"
        android:maxLines="1"
        android:paddingTop="@dimen/dp_20"
        android:paddingBottom="@dimen/dp_20"
        android:textSize="@dimen/sp_14" />


    <View
        android:id="@+id/password_old_v"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/dp_28"
        android:layout_marginRight="@dimen/dp_28"
        android:background="@color/module_background" />

    <EditText

        android:id="@+id/password_new"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_28"
        android:layout_marginRight="@dimen/dp_28"
        android:layout_marginBottom="@dimen/dp_10"
        android:background="@null"
        android:hint="请输入原密码"
        android:maxLines="1"
        android:paddingTop="@dimen/dp_20"
        android:paddingBottom="@dimen/dp_20"
        android:textSize="@dimen/sp_14" />


    <View
        android:id="@+id/password_new_v"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/dp_28"
        android:layout_marginRight="@dimen/dp_28"
        android:background="@color/module_background" />

    <EditText
        android:id="@+id/password_confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_28"
        android:layout_marginRight="@dimen/dp_28"
        android:layout_marginBottom="@dimen/dp_10"
        android:background="@null"
        android:hint="请输入原密码"
        android:maxLines="1"
        android:paddingTop="@dimen/dp_20"
        android:paddingBottom="@dimen/dp_20"
        android:textSize="@dimen/sp_14" />


    <View
        android:id="@+id/password_confirm_v"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/dp_28"
        android:layout_marginRight="@dimen/dp_28"
        android:background="@color/module_background" />

    <TextView
        android:id="@+id/button_next"
        style="@style/button_unselect"
        android:gravity="center"
        android:textColor="@color/module_white"
        android:layout_margin="@dimen/dp_28"
        android:text="提交" />
</LinearLayout>
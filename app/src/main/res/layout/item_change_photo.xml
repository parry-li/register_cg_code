<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="78dp"
    android:layout_height="78dp"
    android:layout_marginRight="@dimen/dp_10"
    android:gravity="center">

    <ImageView
        android:id="@+id/chang_photo_img"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/change_photo" />

    <ImageView
        android:id="@+id/chang_photo_yes"
        android:layout_width="@dimen/dp_12"
        android:layout_height="@dimen/dp_12"
        android:layout_alignParentRight="true"
        android:background="@mipmap/change_photo_yes"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:minHeight="@dimen/dp_30"
        android:gravity="center|top"
        android:layout_centerHorizontal="true">

        <TextView
            android:id="@+id/chang_photo_tv_must"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*"
            android:gravity="center"
            android:textColor="@color/module_red" />

        <TextView
            android:id="@+id/chang_photo_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="照片"
            android:textColor="@color/module_text_9"
            android:textSize="@dimen/sp_12" />
    </LinearLayout>


</RelativeLayout>
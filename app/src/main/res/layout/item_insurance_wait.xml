<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dp_10"
    android:background="@drawable/edittext_border_white_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/wait_plate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="@dimen/dp_16"
                android:text="111111"
                android:textColor="@color/module_text_3"
                android:textSize="@dimen/sp_17" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_16"
                android:text="等待投保"
                android:textColor="@color/module_main"
                android:textSize="@dimen/sp_13" />

        </LinearLayout>

        <View
            style="@style/module_liner_horizontal"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_16" />

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/wait_rv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_18"
                    android:layout_marginRight="@dimen/dp_18" />
            </RelativeLayout>
        </android.support.v4.widget.NestedScrollView>


        <View
            style="@style/module_liner_horizontal"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_16"
            android:layout_marginBottom="@dimen/dp_14" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginRight="@dimen/dp_18"
            android:layout_marginBottom="@dimen/dp_15"
            android:gravity="center|right">

            <TextView
                android:id="@+id/wait_change"
                android:layout_width="86dp"
                android:layout_height="@dimen/dp_30"
                android:layout_marginRight="@dimen/dp_8"
                android:background="@drawable/border_circle_eoeo"
                android:gravity="center"
                android:text="修改"
                android:textColor="@color/module_text_3"
                android:textSize="@dimen/dp_15" />

            <TextView
                android:id="@+id/wait_push"
                android:layout_width="86dp"
                android:layout_height="@dimen/dp_30"
                android:background="@drawable/border_circle_32d"
                android:gravity="center"
                android:text="投保"
                android:textColor="#32DB7C"
                android:textSize="@dimen/dp_15" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
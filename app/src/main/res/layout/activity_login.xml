<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/login_city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_8"
        android:gravity="center"
        android:padding="@dimen/dp_20">

        <ImageView
            android:layout_width="@dimen/dp_12"
            android:layout_height="@dimen/dp_14"
            android:src="@mipmap/login_location" />

        <TextView
            android:id="@+id/city_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_4"
            android:text="请选择城市"
            android:textColor="@color/module_black"
            android:textSize="@dimen/sp_13" />

        <ImageView
            android:layout_width="@dimen/dp_8"
            android:layout_height="@dimen/dp_5"

            android:src="@mipmap/login_down" />
    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_30"
        android:text="账号登录"
        android:textColor="@color/module_black"
        android:textSize="@dimen/sp_30" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_28"
        android:layout_marginTop="@dimen/dp_40"
        android:layout_marginRight="@dimen/dp_28">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="账号"
            android:textColor="@color/module_black"
            android:textSize="@dimen/sp_15" />

        <EditText
            android:id="@+id/login_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_10"
            android:background="@null"
            android:hint="请输入账号"
            android:maxLines="1"
            android:paddingTop="@dimen/dp_20"
            android:paddingBottom="@dimen/dp_20"
            android:textSize="@dimen/sp_14" />
    </LinearLayout>


    <View
        android:id="@+id/login_name_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/dp_28"
        android:layout_marginRight="@dimen/dp_28"
        android:background="@color/module_background" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_28"
        android:layout_marginRight="@dimen/dp_28">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="密码"
            android:textColor="@color/module_black"
            android:textSize="@dimen/sp_15" />

        <EditText
            android:id="@+id/login_pwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_10"
            android:background="@null"
            android:hint="请输入密码"
            android:inputType="textPassword"
            android:maxLines="1"
            android:paddingTop="@dimen/dp_25"
            android:paddingBottom="@dimen/dp_20"
            android:textSize="@dimen/sp_14" />
    </LinearLayout>

    <View
        android:id="@+id/login_pwd_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/dp_28"
        android:layout_marginRight="@dimen/dp_28"
        android:background="@color/module_background" />

    <Button
        android:id="@+id/login_button"
        style="@style/button_select"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_45"
        android:layout_marginRight="@dimen/dp_20"
        android:background="@mipmap/button_unselect"
        android:text="登录"
        android:textColor="@color/module_button_unselect" />


</LinearLayout>
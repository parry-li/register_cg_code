<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/common_title" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/module_white"
                android:orientation="vertical"
                android:paddingLeft="@dimen/dp_18"
                android:paddingTop="@dimen/dp_12"
                android:paddingRight="@dimen/dp_18"
                android:paddingBottom="@dimen/dp_12">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="33dp"
                        android:layout_height="@dimen/dp_18"
                        android:background="@mipmap/cpbb_bg"
                        android:gravity="center"
                        android:text="车辆"
                        android:textColor="@color/module_white"
                        android:textSize="@dimen/sp_12" />

                    <TextView
                        android:id="@+id/change_plate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:text="1235"
                        android:textColor="@color/module_black"
                        android:textSize="@dimen/sp_15" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:gravity="center_vertical">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:text="品牌:"
                        android:textColor="@color/module_text_9"
                        android:textSize="@dimen/sp_13" />

                    <TextView
                        android:id="@+id/transfer_brand"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:text="艾玛"
                        android:textColor="@color/module_text_9"
                        android:textSize="@dimen/sp_13" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="@dimen/dp_13"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:layout_marginRight="@dimen/dp_5"
                        android:background="@color/module_clolor_e8" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_2"
                        android:text="颜色:"
                        android:textColor="@color/module_text_9"
                        android:textSize="@dimen/sp_13" />

                    <TextView
                        android:id="@+id/transfer_color"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:text="艾玛"
                        android:textColor="@color/module_text_9"
                        android:textSize="@dimen/sp_13" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="@dimen/dp_13"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:layout_marginRight="@dimen/dp_5"
                        android:background="@color/module_clolor_e8" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_2"
                        android:text="手机:"
                        android:textColor="@color/module_text_9"
                        android:textSize="@dimen/sp_13" />

                    <TextView
                        android:id="@+id/transfer_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:text="艾玛"
                        android:textColor="@color/module_text_9"
                        android:textSize="@dimen/sp_13" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:gravity="center_vertical">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:text="车主:"
                        android:textColor="@color/module_text_9"
                        android:textSize="@dimen/sp_13" />

                    <TextView
                        android:id="@+id/transfer_ower"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:text="艾玛"
                        android:textColor="@color/module_text_9"
                        android:textSize="@dimen/sp_13" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="@dimen/dp_13"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:layout_marginRight="@dimen/dp_5"
                        android:background="@color/module_clolor_e8" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_2"
                        android:text="证件号码:"
                        android:textColor="@color/module_text_9"
                        android:textSize="@dimen/sp_13" />

                    <TextView
                        android:id="@+id/transfer_card"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:text="艾玛"
                        android:textColor="@color/module_text_9"
                        android:textSize="@dimen/sp_13" />


                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                style="@style/ll_layout"
                android:layout_marginTop="@dimen/dp_10">

                <TextView style="@style/tv_x" />

                <TextView

                    style="@style/tv_key"
                    android:text="姓名" />

                <EditText
                    android:id="@+id/transfer_name"
                    style="@style/tv_value"
                    android:hint="请输入姓名" />

            </LinearLayout>

            <View style="@style/module_liner_horizontal_20" />

            <LinearLayout style="@style/ll_layout">

                <TextView style="@style/tv_x" />

                <TextView

                    style="@style/tv_key"
                    android:text="证件类型" />

                <TextView
                    android:id="@+id/transfer_card_type"
                    style="@style/tv_value"
                    android:hint="请输入证件类型"
                    android:paddingRight="0dp" />

                <ImageView style="@style/right_allow" />

            </LinearLayout>

            <View style="@style/module_liner_horizontal_20" />

            <LinearLayout style="@style/ll_layout">

                <TextView style="@style/tv_x" />

                <TextView

                    style="@style/tv_key"
                    android:text="证件号码" />

                <EditText
                    android:id="@+id/transfer_new_cardnum"
                    style="@style/tv_value"
                    android:hint="请输入证件号码" />

            </LinearLayout>

            <View style="@style/module_liner_horizontal_20" />


            <LinearLayout
                style="@style/ll_layout"
                android:orientation="vertical"
                android:paddingBottom="@dimen/dp_15">

                <TextView

                    style="@style/tv_key_no_x"
                    android:text="车辆照片" />


                <android.support.v7.widget.RecyclerView
                    android:layout_marginLeft="@dimen/dp_28"
                    android:id="@+id/transfer_rv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />


            </LinearLayout>

            <View style="@style/module_liner_horizontal" />


            <LinearLayout style="@style/ll_layout">

                <TextView style="@style/tv_x" />

                <TextView

                    style="@style/tv_key"
                    android:text="联系手机" />

                <EditText
                    android:inputType="phone"
                    android:id="@+id/transfer_new_phone"
                    style="@style/tv_value"
                    android:hint="请输入联系手机" />

            </LinearLayout>

            <View style="@style/module_liner_horizontal" />

            <LinearLayout style="@style/ll_layout">

                <TextView
                    style="@style/tv_x"
                    android:visibility="invisible" />

                <TextView

                    style="@style/tv_key"
                    android:text="备用电话" />

                <EditText
                    android:inputType="phone"
                    android:id="@+id/transfer_new_phone2"
                    style="@style/tv_value"
                    android:hint="请输入备用电话" />

            </LinearLayout>

            <View style="@style/module_liner_horizontal" />

            <LinearLayout style="@style/ll_layout">

                <TextView
                    style="@style/tv_x" />

                <TextView

                    style="@style/tv_key"
                    android:text="现住址" />

                <EditText
                    android:id="@+id/transfer_addr"
                    style="@style/tv_value"
                    android:hint="请输入现住址" />

            </LinearLayout>

            <View style="@style/module_liner_horizontal" />

            <LinearLayout style="@style/ll_layout">

                <TextView
                    style="@style/tv_x"
                    android:visibility="invisible" />

                <TextView

                    style="@style/tv_key"
                    android:text="过户原因" />

                <EditText
                    android:id="@+id/transfer_reason"
                    style="@style/tv_value"
                    android:hint="请输入过户原因" />

            </LinearLayout>

            <View style="@style/module_liner_horizontal" />

            <TextView
                android:id="@+id/transfer_bt"
                style="@style/button_select"
                android:layout_margin="@dimen/dp_20"
                android:text="提交" />
        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>


</LinearLayout>
<resources>


    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/module_text</item>
        <!--<item name="windowNoTitle">true</item>-->
        <!--<item name="android:windowFullscreen">true</item>-->
    </style>



    <style name="TANCStyle" parent="@android:style/Theme.Dialog">
        <!-- 更换背景图片实现全透明 -->
        <item name="android:windowBackground">@drawable/edittext_border_white_bg</item>
        <!-- 屏幕背景不变暗 -->
        <item name="android:backgroundDimEnabled">true</item>
    </style>
    <style name="WENZTANCStyle" parent="@android:style/Theme.Dialog">
        <!-- 更换背景图片实现全透明 -->
        <item name="android:windowBackground">@color/transparent</item>
        <!-- 屏幕背景不变暗 -->
        <item name="android:backgroundDimEnabled">true</item>
    </style>


    <style name="module_liner_horizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/module_background</item>

    </style>

    <style name="module_liner_vertical">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">#E0E0E0</item>

    </style>


    <!-- 关键型说明性文字风格 -->
    <style name="descText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/module_text</item>
    </style>

    <style name="showText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/module_text</item>
    </style>


    <!--ZProgressHUD-->
    <style name="DialogTheme" parent="android:Theme.Dialog">
        <item name="android:windowBackground">@drawable/dialog_background</item>
    </style>

</resources>
